FROM node:18-alpine

WORKDIR /app

# Copia arquivos de package
COPY package*.json ./

# Instala dependências
RUN npm install

# Copia o código fonte
COPY . .

# Build da aplicação para produção (igual na Vercel)
RUN npm run build

# Instala servidor estático para servir o build
RUN npm install -g serve

# Expõe a porta
EXPOSE 3000

# Comando para servir os arquivos buildados
CMD ["serve", "-s", "build", "-l", "3000"]